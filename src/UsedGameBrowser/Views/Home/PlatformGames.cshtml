@{
    ViewData["Title"] = "Games";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model IEnumerable<UsedGameBrowser.Models.Game>

<h2>Games</h2>
<hr />
<ul>
    @foreach (var game in Model)
    {
        <li>@Html.DisplayFor(modelItem => game.Name) | @Html.ActionLink("Details", "GameDetails", new { id = game.Id }, new { target = "_blank" })</li>
    }
</ul>