@{
    ViewData["Title"] = "Used Games";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model UsedGameBrowser.Models.Game

<hr />
<h4>Edit this item: @Html.DisplayFor(model => model.Description)</h4>
@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.GameId)

    @Html.LabelFor(model => model.Title)
    @Html.EditorFor(model => model.Title)

    @Html.LabelFor(model => model.AveragePrice)
    @Html.EditorFor(model => model.AveragePrice)

    @Html.LabelFor(model => model.Description)
    @Html.EditorFor(model => model.Description)

    @Html.LabelFor(model => model.PlatformId)
    @Html.DropDownList("PlatformId")

    <input type="submit" value="Save" class="btn btn-default" />
}
<p>@Html.ActionLink("Back to list", "Index")</p>